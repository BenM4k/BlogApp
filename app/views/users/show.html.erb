<h1><%= current_user.name %></h1>

<p><%= current_user.bio ? current_user.bio : 'No bio' %></>
<ul>
    <% current_user.three_recent_posts.each do |post| %>
        <li>
            <h2>Title: <%= post.title %></h2>
            <p>Text: <%= post.text %></p>
            <span>likes: <%= post.likes_counter %></span>
            <span>Comments: <%= post.comments_counter %></span>
            <% if can? :manage, Post %>
                <%= button_to 'Delete post', user_post_url(current_user.id, post.id), method: :delete %>
            <% end %>

        </li>
    <% end %>
    <br/>
    <%= link_to 'See all posts', user_posts_path(current_user.id) %>
</ul>
